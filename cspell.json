{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "dictionaries": ["@custom-dictionaries/tooling"],
  "dictionaryDefinitions": [
    {
      "addWords": true,
      "name": "@custom-dictionaries/tooling",
      "path": "./dictionaries/tooling.txt"
    }
  ],
  "enableGlobDot": true,
  "ignorePaths": [
    "pnpm-lock.yaml",

    // Ignore all files in the .git directory except `COMMIT_EDITMSG`,
    // so that commit messages can be checked using Git's "commit-msg" hook.
    ".git/**/!(COMMIT_EDITMSG)"
  ],
  "useGitignore": true,
  "version": "0.2"
}
